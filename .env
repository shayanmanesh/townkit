# Environment variables declared in this file are available at build time and runtime.
# Don't put anything sensitive in this file. Use .env.local for secrets.

# Database
# For development, you can use a local PostgreSQL instance or a cloud provider like Railway, Supabase, etc.
DATABASE_URL="postgresql://username:password@localhost:5432/townkit_dev?schema=public"

# Next.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration
EMAIL_FROM="noreply@townkit.com"
EMAIL_PROVIDER="sendgrid"  # Options: sendgrid, postmark, resend

# Email Provider API Keys (use only one based on EMAIL_PROVIDER)
SENDGRID_API_KEY="your-sendgrid-api-key-here"
POSTMARK_API_KEY="your-postmark-api-key-here"
RESEND_API_KEY="your-resend-api-key-here"

# Optional: Webhook URLs for email providers
SENDGRID_WEBHOOK_SECRET="your-webhook-secret"
POSTMARK_WEBHOOK_SECRET="your-webhook-secret"